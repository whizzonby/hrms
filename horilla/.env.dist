# Set "DEBUG=False" for production
DEBUG=True

# Get a secure secret key from https://djecrety.ir
SECRET_KEY=change-me-to-a-secure-random-key

# Don't use "*" for ALLOWED_HOSTS in production
ALLOWED_HOSTS=127.0.0.1,localhost,your-domain.com

CSRF_TRUSTED_ORIGINS=

TIME_ZONE=UTC

# Database URL (optional if using DB_* below)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Password for "Initialize Database" / "Load Demo Data" on first visit
DB_INIT_PASSWORD=change-this-password

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=dbname
DB_USER=user
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432
